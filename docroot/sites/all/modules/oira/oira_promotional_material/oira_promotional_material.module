function _oira_promotional_material_get_url($entity) {
  global $language;
  $url = '';
  $wrapper = entity_metadata_wrapper('node', $entity);
  if (!empty($entity->field_resource_fc)) {
    foreach ($wrapper->field_resource_fc as $fc) {
      if ($fc->field_language->value()['value'] == $language->language) {
        if (!empty($fc->field_link)) {
          $url = $fc->field_link->value()['url'];
        }
        elseif (!empty($fc->field_file)) {
          $file = $fc->field_file->value();
          $url = file_create_url($file['uri']);
        }
      }
    }
  }
  return $url;
}

function oira_promotional_material_field_extra_fields_formatter_view($entity_type, $entity, $extra_field_name, $langcode, $items, $display) {
  $element = [];
  if (empty($display['settings'])) {
    $settings = oira_promotional_material_field_extra_fields_formatter_info()['materials_see_more']['settings'];
  }
  else {
    $settings = $display['settings'];
  }
  switch ($display['type']) {
    case 'materials_see_more':
      $path = drupal_get_path('module', 'oira_promotional_material');
      foreach ($items as $delta => $item) {
        // TODO add js and css.
        $settings['show_more_text'] = 'See more';
        $settings['show_less_text'] = 'See less';
        $settings['delta'] = $entity->nid;
        $element[$delta] = array(
          '#type' => 'markup',
          '#markup' => '<span class="materials-see-more" data-nid="' . $entity->nid . '"><a class="more-link" href="#">' . t('See more') . '</a></span>',
          '#attached' => array(
            'css' => array(
              $path . '/css/see_more.css',
            ),
            'js' => array(
              $path . '/js/see_more.js',
              libraries_get_path('jquery.expander') . '/jquery.expander.js' => array('type' => 'file'),
              array('data' => array('tools_expander' => array($delta => $settings)), 'type' => 'setting'),
            ),
          ),
        );
      }
      break;
  }

  return $element;
}

