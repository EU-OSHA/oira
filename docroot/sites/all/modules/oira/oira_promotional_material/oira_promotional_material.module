/**
 * Extra field callback for views.
 */
function oira_promotional_material_see_more_callback($node) {
  if ($node->type == 'promotional_material') {
    $items = array('See more');
    $display = array('type' => 'materials_see_more', 'view_mode' => 'teaser');
    $element = oira_promotional_material_field_extra_fields_formatter_view('node', $node, 'related_partners', 'en', $items, $display);
    return drupal_render($element);
  }
}



